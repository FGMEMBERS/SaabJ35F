<?xml version="1.0"?>

<PropertyList>

  <path>autopilot.ac</path>


 <animation>
  <type>material</type> 
  <object-name>On</object-name>
  <object-name>Turn</object-name>
  <object-name>Roll</object-name>
  <object-name>Yaw</object-name>
  <object-name>Pitch</object-name>
  <object-name>Cube</object-name>
  <condition>		
    <greater-than>		
     <property>/sim/time/sun-angle-rad</property>
     <value>1.57</value>
    </greater-than>
  </condition>
  <emission>	
   <red>0.15</red>	
   <green>0.03</green>	
   <blue>0.03</blue>
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>
  
<!-- PICK -->

 <animation>
  <type>pick</type>
   <object-name>Altpick</object-name>
   <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <interval-sec>0.2</interval-sec>
    <binding>
      <command>nasal</command>
      <script>SaabJ35F.auto_setting("alt");</script>
   </binding>
   </action>
 </animation>
 
 <animation>
  <type>pick</type>
   <object-name>Attpick</object-name>
   <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <interval-sec>0.2</interval-sec>
    <binding>
      <command>nasal</command>
      <script>SaabJ35F.auto_setting("att");</script>
   </binding>
   </action>
 </animation>
 
 <animation>
  <type>pick</type>
   <object-name>Damppick</object-name>
   <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <interval-sec>0.2</interval-sec>
    <binding>
      <command>nasal</command>
      <script>SaabJ35F.auto_setting("dmp");</script>
   </binding>
   </action>
 </animation>
 
 <animation>
  <type>pick</type>
   <object-name>On</object-name>
   <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <interval-sec>0.2</interval-sec>
    <binding>
      <command>property-toggle</command>
      <property>/autopilot/enabled</property>
   </binding>
   </action>
 </animation>

 <animation>
  <type>pick</type>
   <object-name>TurnL</object-name>
   <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <interval-sec>0.1</interval-sec>
    <binding>
      <command>property-adjust</command>
       <property>autopilot/settings/target-roll-deg</property>
       <step>-1</step>
       <min>-45</min>
       <max>45</max>
    </binding>
   </action>
    <action>
    <button>1</button>
    <repeatable>false</repeatable>
    <interval-sec>0.2</interval-sec>
    <binding>
      <command>property-assign</command>
      <property>autopilot/settings/target-roll-deg</property>
      <value>0</value>
    </binding>
   </action>
 </animation>

 <animation>
  <type>pick</type>
   <object-name>TurnR</object-name>
   <action>
    <button>0</button>

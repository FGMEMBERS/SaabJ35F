<!-- Transformations -->

 <animation>
  <object-name>On</object-name>
  <type>rotate</type>
  <property>/autopilot/enabled</property>
  <factor>44</factor>
  <center>
   <x-m>-0.006765</x-m>
   <y-m>0.02676</y-m>
   <z-m>-0.04136</z-m>
  </center>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>
 
  <animation> 
  <type>material</type> 
  <object-name>Altind</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/inst_ac</property>
    <value>40</value>
   </greater-than>
  </condition>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>0.8</blue>
   <factor-prop>autopilot/locks/altitude</factor-prop>
  </emission>
 </animation>

  <animation> 
  <type>material</type> 
  <object-name>Attind</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/inst_ac</property>
    <value>40</value>
   </greater-than>
  </condition>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>0.8</blue>
   <factor-prop>autopilot/locks/attitude</factor-prop>
  </emission>
 </animation>
 
   <animation> 
  <type>material</type> 
  <object-name>Dampind</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/inst_ac</property>
    <value>40</value>
   </greater-than>
  </condition>
  <emission>
   <red>1.0</red>
   <green>1.0</green>
   <blue>0.8</blue>
   <factor-prop>autopilot/locks/damp</factor-prop>
  </emission>
 </animation>

 <animation>
  <object-name>Turn</object-name>
  <type>rotate</type>
  <property>/autopilot/settings/target-roll-deg</property>
  <factor>-1</factor>
  <center>
   <x-m>0.005343</x-m>
   <y-m>-0.02563</y-m>
   <z-m>0.03602</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <object-name>Pitch</object-name>
  <type>translate</type>
  <property>/autopilot/settings/target-pitch-deg</property>
  <factor>-0.002</factor> <!-- 10 deg 0.02 m -->
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
  </axis>
 </animation>

 <animation>
  <object-name>Roll</object-name>
  <type>rotate</type>
  <property>/controls/flight/aileron-trim</property>
  <factor>-180</factor>
  <center>
   <x-m>0.01051</x-m>
   <y-m>0.01008</y-m>
   <z-m>-0.06592</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <object-name>Yaw</object-name>
  <type>rotate</type>
  <property>/controls/flight/rudder-trim</property>
  <factor>-180</factor>
  <center>
   <x-m>0.009603</x-m>
   <y-m>0.033739</y-m>
   <z-m>-0.06558</z-m>
  </center>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>
  
</PropertyList>

<?xml version="1.0"?>
<PropertyList>

 <path>secai.ac</path>
 
 <animation>
  <type>material</type> 
  <object-name>Cylinder</object-name>
  <object-name>Pointer</object-name>
  <emission>	
   <red>1</red>	
   <green>0.3</green>	
   <blue>0.3</blue>
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>
 
  <animation>
    <type>rotate</type>
    <object-name>Cylinder</object-name>
    <property>instrumentation/attitude-indicator[1]/indicated-roll-deg</property>
    <center>
      <x-m>-0.02522</x-m>
      <y-m>0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis><x>1</x></axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Pointer</object-name>
    <property>instrumentation/attitude-indicator[1]/indicated-roll-deg</property>
    <center>
      <x-m>-0.02522</x-m>
      <y-m>0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis><x>1</x></axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>Cylinder</object-name>
    <property>instrumentation/attitude-indicator[1]/indicated-pitch-deg</property>
    <factor>2</factor>
    <center>
      <x-m>-0.02522</x-m>
      <y-m>0</y-m>
      <z-m>0.0</z-m>
    </center>
    <axis><y>1</y></axis>
  </animation>

</PropertyList>

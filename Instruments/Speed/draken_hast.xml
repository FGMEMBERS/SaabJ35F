<?xml version="1.0"?>
<PropertyList>
  <path>draken_hast.ac</path>

 <animation>
  <type>range</type>
  <min-m>0</min-m>
  <max-m>10</max-m>
 </animation>

 <animation>
  <type>material</type> 
  <object-name>Instrument</object-name>
  <condition>		
    <greater-than>		
     <property>/sim/time/sun-angle-rad</property>
     <value>1.57</value>
    </greater-than>
  </condition>
  <emission>	
   <red>0.15</red>	
   <green>0.03</green>	
   <blue>0.03</blue>
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>
  
 <animation>
  <type>material</type> 
  <object-name>Needle_mach</object-name>
  <object-name>Needle_kmh</object-name>
  <object-name>Face</object-name>
  <object-name>AC_fail</object-name>
  <emission>	
   <red>1</red>	
   <green>0.3</green>	
   <blue>0.3</blue>
   <factor-prop>controls/lighting/instruments-norm</factor-prop>
  </emission>
 </animation>
 
 <animation>
  <type>textranslate</type>
  <object-name>Needle_kmh</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/battery</property>
    <value>20</value>
   </greater-than>
  </condition>
  <property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
  <interpolation>
   <entry><ind>70.2</ind><dep>0.0</dep></entry>
   <entry><ind>109</ind><dep>-0.0567</dep></entry>
   <entry><ind>158</ind><dep>-0.1565</dep></entry>
   <entry><ind>214</ind><dep>-0.2206</dep></entry>
   <entry><ind>319</ind><dep>-0.3067</dep></entry>
   <entry><ind>428</ind><dep>-0.3687</dep></entry>
   <entry><ind>536</ind><dep>-0.4170</dep></entry>
   <entry><ind>643</ind><dep>-0.4559</dep></entry>
   <entry><ind>752</ind><dep>-0.4905</dep></entry>
   <entry><ind>768</ind><dep>-0.5</dep></entry>
  </interpolation>
  <axis>
   <x>1</x>
   <y>0</y>
  </axis>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>Needle_mach</object-name>
  <condition>
   <greater-than>
    <property>systems/electrical/outputs/battery</property>
    <value>20</value>
   </greater-than>
  </condition>
  <property>instrumentation/airspeed-indicator/indicated-mach</property>
  <interpolation>
   <entry><ind>0.55</ind><dep>0.0</dep></entry>
   <entry><ind>0.95</ind><dep>-0.130</dep></entry>
   <entry><ind>1.485</ind><dep>-0.318</dep></entry>
   <entry><ind>1.985</ind><dep>-0.4916</dep></entry>
   <entry><ind>2.035</ind><dep>-0.5</dep></entry>
  </interpolation>
  <axis>
   <x>1</x>
   <y>0</y>
  </axis>
 </animation>

 <animation>
  <object-name>AC_fail</object-name>
  <type>select</type>
  <condition>
   <less-than>
    <property>systems/electrical/outputs/inst_ac</property>
    <value>30</value>
   </less-than>
  </condition>
 </animation>

</PropertyList>

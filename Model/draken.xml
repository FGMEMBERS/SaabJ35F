<!--Cockpit lightning --> 
 <animation>
  <type>material</type> 
  <object-name>draken_instrument</object-name>
  <object-name>draken_cockpit</object-name>
  <condition>		
    <greater-than>		
     <property>/sim/time/sun-angle-rad</property>
     <value>1.57</value>
    </greater-than>
  </condition>
  <emission>	
   <red>0.15</red>	
   <green>0.03</green>	
   <blue>0.03</blue>
   <factor-prop>controls/lighting/consol-norm</factor-prop>
  </emission>
 </animation>
  


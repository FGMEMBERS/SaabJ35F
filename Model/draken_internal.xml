 <animation>
  <type>translate</type>
  <object-name>Canopy_control</object-name>
  <property>/controls/canopy/enabled</property>
  <factor>-0.01</factor>
  <axis>
   <x>0</x>
   <y>0</y>
   <z>1</z>
